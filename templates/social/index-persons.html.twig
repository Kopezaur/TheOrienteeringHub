{% extends 'layout.html.twig' %}

{% block title %}TheOrienteeringHub | People{% endblock %}

{% block body_class %}{% endblock %}

{% block body %}
	<div class="container marketing">

		<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    		<h2 class="display-4">People</h2>
    	</div>
    	
    	<div class="row">
    	
    	    {% set counter = 1 %}
	        {%for person in persons %}
        		<div class="col-lg-4">
        			{% if (person.profilephoto) %}
            			<img alt="Photo"
            				src="{{ asset('build/images/' ~ person.profilephoto) }}"
            				id="profile-image1"
            				class="img-circle img-responsive" 
            				width=100 
            				height=100>
        			{% else %}
            			<img alt="Photo"
            				src="{{ asset('build/images/profile-default.jpg') }}"
            				id="profile-image1" 
            				class="img-circle img-responsive" 
            				width=100
            				height=100>
        			{% endif %}
        			<h2>{{ person.lastname }}</h2>
        			<h2>{{ person.firstname }}</h2>
        			<h4><span class="font-italic">({{ person.role.name }})</span></h3>
        			<p>
        				<a class="btn ohub-color-1 text-white view-details-button" href="{{ path('viewPerson', { 'id':person.id }) }}" role="button">View profile
        					&raquo;</a>
        			</p>
        		</div>
        		<!-- /.col-lg-4 -->
        		{% set counter = counter + 1 %}
            {% else %}
                <p class="mt-3 mb-5 text-muted side-note text-center">No people have been found in the database</p>
        	{% endfor %}
        	
        	{% set counter = counter - 1 %}
		</div><!-- /.row -->
		<p class="mt-1 mb-5 text-muted side-note text-center">Total number of people : {{ counter }}</p>
        
	</div>
{% endblock %}