{% extends 'base.html.twig' %}

{% block title %} {{'TheOrienteeringHub | Register'}} {% endblock %}

{% block body %}

	<div class="register-container form-register">
	
		<h1 class="h3 mb-3 font-weight-normal text-center">Welcome to the registration page for The Orienteering Hub!</h1>
		<p class="mt-5 mb-3 text-muted side-note text-center">Please complete the fields below to submit your registration.</p>
		<p class="mt-5 mb-3 text-muted side-note text-center">Notice : The fields marked with * are mandatory.</p>
		
		{{ form_start(form) }}
		{{ form_errors(form) }}
		<div class="form-group">
			{{ form_label(form.firstname) }}
			{{ form_widget(form.firstname) }}
			{{ form_errors(form.firstname) }}
		</div>
		<div class="form-group">
			{{ form_label(form.lastname) }}
			{{ form_widget(form.lastname) }}
			{{ form_errors(form.lastname) }}
		</div>
		<div class="form-group">
			{{ form_label(form.username) }}
			{{ form_widget(form.username) }}
			{{ form_errors(form.username) }}
		</div>
		<div class="form-group">
			{{ form_label(form.plainPassword) }}
			{{ form_widget(form.plainPassword) }}
			{{ form_errors(form.plainPassword) }}
		</div>
		<div class="form-group">
			{{ form_label(form.email) }}
			{{ form_widget(form.email) }}
			{{ form_errors(form.email) }}
		</div>
		<div class="form-group">
			{{ form_label(form.role) }}
			{{ form_widget(form.role) }}
			{{ form_errors(form.role) }}
		</div>
		<div class="form-group">
			{{ form_label(form.country) }}
			{{ form_widget(form.country) }}
			{{ form_errors(form.country) }}
		</div>
		<div class="form-group">
			{{ form_label(form.category) }}
			{{ form_widget(form.category) }}
			{{ form_errors(form.category) }}
		</div>
		<div class="form-group">
			{{ form_label(form.activeclub) }}
			{{ form_widget(form.activeclub) }}
			{{ form_errors(form.activeclub) }}
		</div>
		<br>
		
		<div>
	        {{ form_widget(form.save) }}
	    </div>
		
		{{ form_end(form) }}
	</div>
{% endblock %}
